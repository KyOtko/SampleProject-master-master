<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleProject.Activity.StackLayout">

    <StackLayout >
        <StackLayout  HeightRequest="30"
                 Margin="10">
            <Label Text=" nyc_Photographer"/>
        </StackLayout>
        <StackLayout
             HeightRequest="300">
            <Image  HeightRequest="300" 
                   Source="http://lorempixel.com/1920/1080/nature/3/"
                   Aspect="AspectFill"/>
        </StackLayout>
        <StackLayout HeightRequest="20"
                     Margin="10" Orientation="Horizontal" Spacing="25">
            <Label Text="Like"  FontSize="15"   TextColor="DarkBlue"/>
            <Label Text="Comment"  FontSize="15"   TextColor="DarkBlue"/>
            <Label Text="Share"  FontSize="15"   TextColor="DarkBlue"/>
    
        </StackLayout>
        <StackLayout  HeightRequest="20"
                     Margin="10" Orientation="Vertical" Spacing="10">
            <BoxView HeightRequest="1" BackgroundColor="Gray" />
            <Label Text="700 likes" TextColor="Black" FontAttributes="Bold"/>
            <Label Text="This is a shot yesterday in Skanor, Sweden, when driveing home, from the couple of daysof work in Denmark"/>

        </StackLayout>
    </StackLayout>
</ContentPage>